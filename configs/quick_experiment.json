{
  "model_config": {
    "model_type": "autoencoder",
    "input_shape": [32, 64, 64],
    "latent_dim": 128
  },
  "training_config": {
    "epochs": 20,
    "batch_size": 8,
    "learning_rate": 0.002,
    "weight_decay": 1e-4,
    "optimizer": "adamw",
    "betas": [0.9, 0.999],
    "momentum": 0.9,
    "scheduler": "cosine",
    "scheduler_factor": 0.5,
    "scheduler_patience": 5,
    "scheduler_min_lr": 1e-6,
    "loss_function": "mse",
    "use_amp": true
  },
  "data_config": {
    "train_split": 0.7,
    "val_split": 0.3,
    "num_workers": 2,
    "normalize": true,
    "augment": false
  },
  "checkpoint_config": {
    "save_every": 10,
    "validate_every": 1,
    "early_stopping_patience": 8,
    "early_stopping_min_delta": 1e-5,
    "keep_last_checkpoints": 3
  },
  "logging_config": {
    "log_interval": 5,
    "plot_interval": 10,
    "save_plots": false
  },
  "experiment_config": {
    "output_dir": "quick_experiments",
    "model_name": "quick_autoencoder",
    "description": "Quick experimentation configuration for rapid prototyping and testing",
    "tags": ["quick", "experiment", "prototype", "small"]
  }
}
