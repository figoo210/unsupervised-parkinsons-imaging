{
  "model_config": {
    "model_type": "vae",
    "input_shape": [64, 128, 128],
    "latent_dim": 256
  },
  "training_config": {
    "epochs": 150,
    "batch_size": 4,
    "learning_rate": 0.001,
    "weight_decay": 1e-5,
    "optimizer": "adam",
    "betas": [0.9, 0.999],
    "momentum": 0.9,
    "scheduler": "reduce_on_plateau",
    "scheduler_factor": 0.5,
    "scheduler_patience": 15,
    "scheduler_min_lr": 1e-7,
    "use_amp": true
  },
  "vae_config": {
    "beta": 1.0,
    "beta_warmup_steps": 20,
    "free_bits": 0.0,
    "reconstruction_loss": "mse",
    "kl_weight_schedule": "constant"
  },
  "data_config": {
    "train_split": 0.8,
    "val_split": 0.2,
    "num_workers": 4,
    "normalize": true,
    "augment": false
  },
  "checkpoint_config": {
    "save_every": 5,
    "validate_every": 1,
    "early_stopping_patience": 25,
    "early_stopping_min_delta": 1e-6,
    "keep_last_checkpoints": 5
  },
  "logging_config": {
    "log_interval": 10,
    "plot_interval": 20,
    "save_plots": true,
    "track_kl_divergence": true,
    "track_reconstruction_loss": true
  },
  "experiment_config": {
    "output_dir": "outputs",
    "model_name": "vae",
    "description": "Default VAE configuration for medical image analysis with KL divergence regularization",
    "tags": ["vae", "variational", "medical", "brain", "default"]
  }
}
